declare -i count=1
declare -i start=1
numfiles=(*)
numfiles=${#numfiles[@]}


printf "" > .output
printf "#!/bin/bash\n" >> .output
if [ "$numfiles" -lt 10 ]; then
    for i in *;do
    extension="${i##*.}"
    printf "mv %s ape-2016-11-09-small-%01d.%s\n" $i $count $extension >> .output;
    ((count++))
    done;
elif [ "$numfiles" -lt 100 ]; then
    for i in *;do
    extension="${i##*.}"
    printf "mv %s ape-2016-11-09-small-%02d.%s\n" $i $count $extension >> .output;
    ((count++))
    done;
else
    for i in *;do
    extension="${i##*.}"
    printf "mv %s ape-2016-11-09-small-%03d.%s\n" $i $count $extension >> .output;
    ((count++))
    done;
fi
